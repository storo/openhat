      function update(){
          var sc = 0.00177777777778; // valor aprox por paso al momento de escalar
          $('#playground').find('div[class*=avatar-head-]').css('zIndex', '0');

          <% if current_user.id != @stage.user_id %>

          if (keydown.left) {
              if(player.x > 2){
                player.x -= 2;
                player.activado = 1;

              }
          }

          if (keydown.right) {
              if(player.x <851){
                player.x += 2;
                player.activado = 1;
              }
          }

          if (keydown.up) {
              if(player.y > 8){
                  player.y -= 2;
                  player.activado = 1;
                  player.scale -= sc;
              }
          }

          if (keydown.down) {
              if(player.y < 458){
                  player.y += 2;
                  player.activado = 1;
                  player.scale += sc;
              }

          }
           <% end %>

          if(player){
              player.admin =  '<%= (current_user.id == @stage.user_id)? true : false %>';
              player.name = '<%= (current_user.name.nil?)? 'anonymous': current_user.name.split(" ").first %>';
              <% if !@character.nil? %>
                   <% @character.each do |d| %>
                        <% dd = d.section.split('-') %>
                        <% if dd[1] == 'head' %>
                            player.head = <%= dd[2] %>;
                        <% elsif dd[1] == 'jacket' %>
                            player.jacket = <%= dd[2] %>;
                        <% elsif dd[1] == 'legs' %>
                            player.legs = <%= dd[2] %>;
                        <% elsif dd[1] == 'feet' %>
                            player.feet = <%= dd[2] %>;
                        <% elsif dd[1] == 'eyes' %>
                            player.eyes = <%= dd[2] %>;
                        <% elsif dd[1] == 'nose' %>
                            player.nose = <%= dd[2] %>;
                        <% elsif dd[1] == 'mouth' %>
                            player.mouth = <%= dd[2] %>;
                        <% end %>
                   <% end %>
              <% else %>
                   player.head = 1;
                   player.jacket = 1;
                   player.legs = 1;
                   player.feet = 1;
                   player.eyes = 1;
                   player.mouth = 1;
                   player.nose = 1;
              <% end %>

              socket.emit('update',{
                  id:player.id,
                  x:player.x,
                  y:player.y,
                  scale: player.scale,
                  a: player.activado,
                  name : player.name,
                  head: player.head,
                  jacket: player.jacket,
                  legs: player.legs,
                  feet: player.feet,
                  eyes: player.eyes,
                  nose: player.nose,
                  mouth: player.mouth,
                  admin:'<%= (current_user.id == @stage.user_id)? true : false %>'});
          }

      }

