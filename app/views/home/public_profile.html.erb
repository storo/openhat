           if @followers.count > 0
             @followers.each do |f|
        %>
                <div class="follower">
                  <%= link_to(image_tag(f.user.image, :alt => f.user.name), public_profile_path( Digest::MD5.hexdigest(f.user.id.to_s)))  %>
