<article id="container">
  <!-- start box -->
  <section class="box">
    <!-- start left side -->
    <section class="Left-side">
      <!-- start img-block -->
      <section class="img-block">
        <a href="#" class="icon"><%= image_tag 'ic_image.png', :alt => 'icon' %></a>
        <section class="frame">&nbsp;</section>
        <%= image_tag @user.image.gsub("square", "large"), :width => 298, :height => 350, :alt => @user.name %>
      </section>
      <!-- end img-block -->
      <section class="clear"></section>
      <!-- start follow us -->
